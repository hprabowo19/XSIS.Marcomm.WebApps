@model IEnumerable<XSIS.Marcomm.ViewModels.SouvenirRequestViewModel>

@{
    ViewBag.Title = "List Souvenir Request";
    ViewBag.SelectedHome = "";
    ViewBag.SelectedMasterCompany = "";
    ViewBag.SelectedMasterEmployee = "";
    ViewBag.SelectedMasterRole = "";
    ViewBag.SelectedMasterUser = "";
    ViewBag.SelectedMasterMenu = "";
    ViewBag.SelectedMasterMenuAccess = "";
    ViewBag.SelectedMasterProduct = "";
    ViewBag.SelectedMasterSouvenir = "";
    ViewBag.SelectedMasterUnit = "";
    ViewBag.SelectedTransactionEvent = "";
    ViewBag.SelectedTransactionDesign = "";
    ViewBag.SelectedTransactionPromotion = "";
    ViewBag.SelectedTransactionSouvenir = "";
    ViewBag.SelectedTransactionSouvenirRequest = "active";

    if (Session["DetailEmployee"] != null)
    {
        var Employee = (XSIS.Marcomm.ViewModels.EmployeeViewModel)Session["DetailEmployee"];
        ViewBag.IdEmployee = Employee.ID;
    }

    if (Session["DetailUser"] != null)
    {
        var User = (XSIS.Marcomm.ViewModels.UserViewModel)Session["DetailUser"];
        ViewBag.IdRole = User.RoleID;
    }
}

<section class="souvenir-item">
    <input type="text" id="SessionLogin" value="@ViewBag.IdEmployee" hidden/>
    <input type="text" id="RoleSessionLogin" value="@ViewBag.IdRole" hidden/>
    <div class="card">
        <div class="card-padding">
            <div class="card-header">
                <h2>@ViewBag.Title</h2>
            </div>

            <div class="card-body">
                <div class="breadcrumb">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("Index", "SouvenirRequest")">Transaction</a></li>
                        <li class="active">@ViewBag.Title</li>
                    </ul>
                </div>
                <div class="row">
                    <div class="col-sm-10"></div>
                    <div class="col-sm-2">
                        <a data-toggle="modal" href="#" class="btn btn-primary modalMenuAccess" id="Create">
                            <span>Add</span>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 input-inline">
                        <input type="text" class="input-box" id="code" placeholder="Transaction Code" />
                        <input type="text" class="input-box" id="requestBy" placeholder="Request By" />
                        <input type="text" class="input-box date-picker" id="requestDate" placeholder="Request Date" />
                        <input type="text" class="input-box date-picker" id="dueDate" placeholder="Due Date" />
                        <input type="text" class="input-box" id="status" placeholder="Status" />
                        <input type="text" class="input-box date-picker" id="createdDate" placeholder="Created Date" />
                        <input type="text" class="input-box" id="createdBy" placeholder="Created By" />
                    </div>
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-warning btn-search">
                            <span>Search</span>
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Transaction Code
                                </th>
                                <th>
                                    Request By
                                </th>
                                <th>
                                    Request Date
                                </th>
                                <th>
                                    Due Date
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Created Date
                                </th>
                                <th>
                                    Created By
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody class="tbody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="my-alert" tabindex="1"></div>

<div class="modal fade" id="modalMenuAccess" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/transaction-souvenir")
}
