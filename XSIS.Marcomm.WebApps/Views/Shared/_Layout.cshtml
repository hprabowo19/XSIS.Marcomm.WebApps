<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - XSIS Marcomm System</title>
    @Styles.Render("~/Content/cssvendortemplate")
    @Styles.Render("~/Content/csstemplate")
    @Styles.Render("~/Content/cssmystyle")
</head>
<body>

    @Html.Partial("_HeaderPartial")

    <section id="main">

        @Html.Partial("_SidebarPartial")

        <section id="content">
            @RenderBody()
        </section>
    </section>

    @Html.Partial("_FooterPartial")

    <!-- Page Loader -->
    <div class="page-loader">
        <div class="preloader pls-blue">
            <svg class="pl-circular" viewBox="25 25 50 50">
                <circle class="plc-path" cx="50" cy="50" r="20" />
            </svg>

            <p>Please wait...</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquerytemplate")
    @Scripts.Render("~/bundles/bootstraptemplate")
    @Scripts.Render("~/bundles/apptemplate")
    @RenderSection("scripts", required: false)
</body>
</html>
