@model XSIS.Marcomm.ViewModels.MenuAccessViewModel

@{
    ViewBag.Title = "View Menu Access";
}

<section class="details">
    <div class="card">
        <div class="card-padding">
            <div class="card-header bg-primary">
                <h2 class="title">
                    @ViewBag.Title -
                    @Html.DisplayFor(model => model.mRoleName)
                    (@Html.DisplayFor(model => model.mRoleCode))
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        * Role Code
                    </div>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(model => model.mRoleCode, new { @class = "input-box", @disabled = "disabled" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        * Menu Access
                    </div>
                    <div class="col-sm-7">
                        @foreach (var item in Model.availableMenus)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" @(item.Selected ? "checked" : "" ) value="@item.Value" disabled />
                                    <i class="input-helper"></i>
                                    @item.Text
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="row modal-footer">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-warning" data-dismiss="modal">
                            Close
                        </button>
                    </div>
                    <div class="col-sm-5"></div>
                </div>
            </div>
        </div>
    </div>
</section>