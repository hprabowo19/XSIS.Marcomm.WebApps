@model XSIS.Marcomm.ViewModels.MenuAccessViewModel

@{
    ViewBag.Title = "Add Menu Access";
}
<section class="create">
    <div class="card">
        <div class="card-padding">
            <div class="card-header">
                <h2>
                    @ViewBag.Title
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        * Role Code
                    </div>
                    <div class="col-sm-7">
                        @Html.DropDownList("RoleName", null, "- Select Role Name -", new { @class = "input-box" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3">
                        * Menu Access
                    </div>
                    <div class="col-sm-7">
                        @foreach (var item in ViewBag.Menus)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="selectedMenus" class="selectedMenus" value="@item.Value" />
                                    <i class="input-helper"></i>
                                    @item.Text
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10" id="my-validate">
                    </div>
                </div>
                <div class="row modal-footer">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-3">
                        <button type="button" class="btn btn-primary btn-create">
                            <span>Save</span>
                        </button>
                    </div>
                    <div class="col-sm-3">
                        <button type="button" class="btn btn-warning" data-dismiss="modal">
                            <span>Cancel</span>
                        </button>
                    </div>
                    <div class="col-sm-3"></div>
                </div>
            </div>
        </div>
    </div>
</section>