@model IEnumerable<XSIS.Marcomm.ViewModels.RoleViewModel>

@{
    ViewBag.Title = "List Menu Access";
    ViewBag.SelectedHome = "";
    ViewBag.SelectedMasterCompany = "";
    ViewBag.SelectedMasterEmployee = "";
    ViewBag.SelectedMasterRole = "";
    ViewBag.SelectedMasterUser = "";
    ViewBag.SelectedMasterMenu = "";
    ViewBag.SelectedMasterMenuAccess = "active";
    ViewBag.SelectedMasterProduct = "";
    ViewBag.SelectedMasterSouvenir = "";
    ViewBag.SelectedMasterUnit = "";
    ViewBag.SelectedTransactionEvent = "";
    ViewBag.SelectedTransactionDesign = "";
    ViewBag.SelectedTransactionPromotion = "";
    ViewBag.SelectedTransactionSouvenir = "";
    ViewBag.SelectedTransactionSouvenirRequest = "";
}

<section class="menu-access">
    <div class="card">
        <div class="card-padding">
            <div class="card-header">
                <h2>@ViewBag.Title</h2>
            </div>

            <div class="card-body">
                <div class="breadcrumb">
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("Index", "MenuAccess")">Master</a></li>
                        <li class="active">@ViewBag.Title</li>
                    </ul>
                </div>
                <div class="row">
                    <div class="col-sm-10"></div>
                    <div class="col-sm-2">
                        <a data-toggle="modal" href="#" class="btn btn-primary modalMenuAccess" id="Create">
                            <span>Add</span>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        @Html.DropDownList("RoleCode", null, "- Select Role Code -", new { @class = "input-box" })
                    </div>
                    <div class="col-sm-3">
                        @Html.DropDownList("RoleName", null, "- Select Role Name -", new { @class = "input-box" })
                    </div>
                    <div class="col-sm-2">
                        <input type="text" class="input-box date-picker" placeholder="
                            @Html.DisplayNameFor(model => model.CreatedDate)" id="CreatedDate" />
                    </div>
                    <div class="col-sm-2">
                        <input type="text" class="input-box" placeholder="
                            @Html.DisplayNameFor(model => model.CreatedBy)" id="CreatedBy" />
                    </div>
                    <div class="col-sm-2">
                        <button type="submit" class="btn my-btn btn-warning btn-search"><span>Search</span></button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Role Code
                                </th>
                                <th>
                                    Role Name
                                </th>
                                <th>
                                    Created Date
                                </th>
                                <th>
                                    Created By
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody class="tbody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div id="my-alert" tabindex="1"></div>

    <div class="modal fade" id="modalMenuAccess" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/menu-access")
}
