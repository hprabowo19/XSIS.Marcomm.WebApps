@model XSIS.Marcomm.ViewModels.AccountViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    .error {
        color: red;
    }
</style>


<div class="lc-block toggled" id="l-login">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="lcb-form">
            <p class="text-left">Please enter your username & password to Log In XSIS Marcomm System.</p>
            <p class="text-left">
                @Html.ValidationSummary(true, "", new { @class = "error" })
                <br />
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "error" })
                <br />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error" })
            </p>
            <div class="input-group m-b-20">
                <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                <div class="fg-line">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "username" } })
                </div>
            </div>

            <div class="input-group m-b-20">
                <span class="input-group-addon"><i class="zmdi zmdi-male"></i></span>
                <div class="fg-line">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "password" })
                </div>
            </div>
            <button type="submit" class="btn btn-login btn-success btn-float"><i class="zmdi zmdi-arrow-forward"></i></button>
        </div>
    }
</div>


